<?xml version="1.0" encoding="UTF-8"?>
<job id="job" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/jobXML_1_0.xsd"
    version="1.0">
    <listeners>
        <listener ref="myJobListener"></listener>
    </listeners>
    <step id="etape1" next="etape2">
        <batchlet ref="myBatchlet1">
            <properties></properties>
        </batchlet>
    </step>
    <step id="etape2">
        <batchlet ref="MyBachlet2">
            <properties></properties>
        </batchlet>
        <end on="END"/>
    </step>
    <split id="mySplit">
        <flow id="flow1">
            <step id="flow1etape1" next="flow1etape2">
                <chunk>
                    <reader ref="myReader"></reader>
                    <processor ref="myProcessor"></processor>
                    <writer ref="myWriter"></writer>
                </chunk>
            </step>
            <step id="flow1etape2">
                <batchlet ref="myBatchet3"></batchlet>
                <end on="END"/>
            </step>
        </flow>
        <flow id="flow2"></flow>
    </split>
</job>