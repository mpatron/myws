<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.jobjects.myws</groupId>
	<artifactId>myws</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<build>
		<finalName>myws</finalName>
		<defaultGoal>install</defaultGoal>
		<plugins>
			<plugin>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.6</version>
				<configuration>
					<failOnMissingWebXml>false</failOnMissingWebXml>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.19.1</version>
				<configuration>
					<argLine>-Xms128m -Xmx256m</argLine>
					<!-- <argLine>-Xms128m -Xmx256m -XX:PermSize=128m -XX:MaxPermSize=256m</argLine> -->
					<!-- <parallel>true</parallel> <forkMode>always</forkMode> -->
					<!-- <suiteXmlFiles><suiteXmlFile>${basedir}/src/test/resources/testng.xml</suiteXmlFile></suiteXmlFiles> -->
					<systemProperties>
						<property>
							<name>java.util.logging.config.file</name>
							<value>${basedir}/src/test/resources/org/jobjects/myws/tools/log/logging.properties</value>
						</property>
						<property>
							<name>derby.stream.error.file</name>
							<value>${basedir}/target/derby.log</value>
						</property>
					</systemProperties>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-site-plugin</artifactId>
				<version>3.6</version>
				<configuration>
					<reportPlugins>
						<plugin>
							<!-- javadoc. -->
							<groupId>org.apache.maven.plugins</groupId>
							<artifactId>maven-javadoc-plugin</artifactId>
							<version>2.10.4</version>
						</plugin>

						<plugin>
							<!-- vérifier la qualité du code avec checkstyle. -->
							<groupId>org.apache.maven.plugins</groupId>
							<artifactId>maven-checkstyle-plugin</artifactId>
							<version>2.17</version>
							<configuration>
							<!-- 
								<configLocation>config/sun_checks.xml</configLocation>
								<configLocation>config/maven_checks.xml</configLocation>
								<configLocation>file:///D:/ProjetsJava/JValidation/src/test/resources/mp_checks.xml</configLocation>
								<configLocation>mp_checks.xml</configLocation>
							 -->
							 <configLocation>src/test/resources/google_checks.xml</configLocation>
								
							</configuration>
						</plugin>
                                                <!-- générer un rapport de couverture des tests. -->
                                                <!--
						<plugin>
							<groupId>org.codehaus.mojo</groupId>
							<artifactId>cobertura-maven-plugin</artifactId>
							<version>2.7</version>                                                        
                                                        <configuration>
								<instrumentation>
								<includes></includes>
								<excludes>
									<exclude>org.jobjects.myws.orm.UserStalessTest</exclude>
                                                                        <exclude>org.jobjects.myws.email.RestEmailValidatorTest</exclude>
                                                                        <exclude>org.jobjects.myws.email.EMailValidatorTest</exclude>
                                                                        <exclude>org.jobjects.myws.user.UserRESTWebServiceTest</exclude>
								</excludes>
								</instrumentation>
                                                        </configuration>
						</plugin>
                                                -->
						<plugin>
							<!-- vérifier la qualité du code avec PMD. -->
							<groupId>org.apache.maven.plugins</groupId>
							<artifactId>maven-pmd-plugin</artifactId>
							<version>3.7</version>
							<configuration>
								<targetJdk>${compileSource}</targetJdk>
							</configuration>
						</plugin>
					</reportPlugins>
				</configuration>
			</plugin>                        
		</plugins>
